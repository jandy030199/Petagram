<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/margin_right_left"
        android:layout_marginLeft="@dimen/margin_right_left"
        android:layout_marginBottom="@dimen/margin_bottom"
        >

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imgv_height"

            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/linear_top"
                >

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bone"
                    android:background="@color/white"
                    android:layout_marginRight="@dimen/margin_imgv_right_left"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tvNroLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        />

                    <ImageView
                        android:id="@+id/ivNroLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bone_color"
                        android:layout_marginLeft="@dimen/margin_imgv_right_left"
                        android:layout_gravity="center_vertical"

                        />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

</androidx.cardview.widget.CardView>

